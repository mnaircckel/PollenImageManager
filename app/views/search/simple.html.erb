<div class="container">
<%= link_to "Back to Image Database", pollen_images_path %>
<h2>Taxonomic Search</h2> 
<br>
<!-- Each text_field_tag is sent to params[] on submition-->
<!-- This can be seen in the URL after a search. Check pollen_images_controller.erb for sorting logic. -->
<%= form_tag pollen_images_path, method: :get do %>
  
  <div class="control-group">
    <%= label_tag(:latin_name, "Scientific Name:") %>
    <div class="controls">
      <%= text_field_tag :latin_name, params[:latin_name] %>
    </div>
  </div>
  <br>
  
  <div class="control-group">
    <%= label_tag(:family, "Family:") %>
    <div class="controls">
      <%= text_field_tag :family, params[:family] %>
    </div>
  </div>
  <br>

  <div class="control-group">  
    <%= label_tag(:common_name, "Common Name:") %>
    <div class="controls">
      <%= text_field_tag :common_name, params[:common_name] %>
    </div>
  </div>

  <br>
  <%= submit_tag "Search" %>

<% end %>
</div>