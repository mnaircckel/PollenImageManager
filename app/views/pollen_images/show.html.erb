<div class="container">
<%- model_class = PollenImage -%>
<div class="page-header">
  <h1><i><%=t '.title', :default => @pollen_image.latin_name %></i>
  <br>
  <%= link_to t('.back_to_index', :default => t("helpers.links.back_to_index")),
              index_entries_path, :class => 'btn btn-default'  %>
  <%= link_to t('.view_full_size', :default => t("helpers.links.view_full_size")),
              "#{URI.join(@pollen_image.picture_url)}", :class => 'btn btn-default' %>
  <%= link_to t('.view_metadata', :default => t("helpers.links.view_metadata")),
              pollen_image_metadata_path(@pollen_image), :class => 'btn btn-default' %>
  </h1>
  <%= image_tag @pollen_image.picture_url :standard %>
</div>
<% if session[:position] and session[:ids] and session[:ids].length > 1 %>
  <%= link_to t('.previous_image', :default => t("helpers.links.previous_image")),
            pollen_image_path(session[:prev]), :class => 'btn btn-default'  %>
  <%= link_to t('.next_image', :default => t("helpers.links.next_image")),
            pollen_image_path(session[:next]), :class => 'btn btn-default'  %>
<% end %>
<h5 class="dl-horizontal">
  <h5><strong><%=t "Scientific Name" %>:</strong><i><%= " " + @pollen_image.latin_name.to_s %></i></h5>
  <h5><strong><%= model_class.human_attribute_name(:family).titleize %>:</strong><%= " " + @pollen_image.family.to_s.upcase %></h5>
  <h5><strong><%= model_class.human_attribute_name(:common_name).titleize %>:</strong><%= " " + @pollen_image.common_name.to_s %></h5>
  <h5><strong><%= model_class.human_attribute_name(:grain_number).titleize %>:</strong><i><%= " " + @pollen_image.grain_number.to_s %></i></h5>
  <h5><strong><%= model_class.human_attribute_name(:focal_plane).titleize %>:</strong><i><%= " " + @pollen_image.focal_plane.to_s %></i></h5>
  <h5><strong><%= model_class.human_attribute_name(:notes).titleize %>:</strong><%= " " + @pollen_image.notes.to_s %></h5>
  
</h5>
<% if user_signed_in? %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_pollen_image_path(@pollen_image), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                pollen_image_path(@pollen_image),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-default' %>
<% end %>
</div>